<% provide(:title, "Registration") %>

<div class="login">
	<h3 class="my-4">Регистрация</h3>

	<% if @user.errors.any? %>
	<div class="alert alert-danger mt-4">
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	  	</ul>
	</div>
	<% end %>

	<%= form_for(@user, url: signup_path) do |f| %>

		<div class="form-group">
			<%= f.label :ФИО %>
			<br>
			<%= f.text_field :name, class: 'mb-2' %>
		</div>

		<div class="form-group">
			<%= f.label :email %>
			<br>
			<%= f.email_field :email, class: 'mb-2' %>
		</div>

		<div class="form-group">
			<%= f.label :Пароль %>
			<br>
			<%= f.password_field :password, class: 'mb-' %>
		</div>

		<div class="form-group">
			<%= f.label :Подтверждение_пароля%>
			<br>
			<%= f.password_field :password_confirmation, class: 'mb-2' %>
		</div>

		<div class="form-group">
			<%= f.label :Мастер_пароль_администрации %>
			<br>
			<%= f.password_field :master_password, class: 'mb-2' %>
		</div>

		<%= f.submit "Создать", class: "btn btn-primary" %>
	<% end %>
</div>
