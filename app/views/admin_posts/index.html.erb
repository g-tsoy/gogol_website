<% provide(:title, "Admin | Posts") %>
<% provide(:active, "posts") %>

<% content_for :breadcrumb do %>
	<%= render 'shared/breadcrumb', path: [path("Главная", "/"), path("Личный кабинет", "/admin"), path("Новости", "/admin/posts")] %>
<% end %>

<div id='n'>
	<h4 id='cr'>Новости:</h4>
	<table>
		<thead>
			<th class="w-75">Название</th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td class="pr-2"><%= post.name %></td>
				<td class="pr-3"><%= link_to "Редактировать", "/admin/posts/#{post.id}/edit" %></td>
				<td><%= link_to "Удалить", "/admin/posts/#{post.id}/delete", method: "delete" %></td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<%= link_to "Создать", admin_posts_new_path, class: "btn btn-primary btn-sm mt-4" %>
</div>